        let currentLang = localStorage.getItem('pkm-lang') || 'en';
        let currentTheme = localStorage.getItem('pkm-theme') || 'mac';
        let currentCheatsheet = null;

        // Apply theme
        function applyTheme() {
            const container = document.getElementById('overlayContainer');
            const detailContent = document.getElementById('detailContent');
            
            container.className = `overlay-container theme-${currentTheme}`;
            if (detailContent) {
                detailContent.className = `detail-content`;
            }
            
            document.getElementById('themeToggle').textContent = 
                currentTheme === 'mac' ? 'ü™ü Win' : 'üçé Mac';
        }

        // Apply language
        function applyLanguage() {
            const t = translations[currentLang];
            
            document.getElementById('titleText').textContent = t.title;
            document.getElementById('searchInput').placeholder = t.searchPlaceholder;
            document.getElementById('toggleText').textContent = t.toggleText;
            document.getElementById('closeText').textContent = t.closeText;
            document.getElementById('cheatsheetsText').textContent = t.cheatsheetsText;
            document.getElementById('copyBtn').textContent = t.copyBtn;
            document.getElementById('closeBtn').textContent = t.closeBtn;
            document.getElementById('langToggle').textContent = 
                currentLang === 'en' ? 'üá´üá∑ FR' : 'üá¨üáß EN';
            
            renderCheatsheets();
        }

        // Toggle theme
        function toggleTheme() {
            currentTheme = currentTheme === 'mac' ? 'windows' : 'mac';
            localStorage.setItem('pkm-theme', currentTheme);
            applyTheme();
        }

        // Toggle language
        function toggleLanguage() {
            currentLang = currentLang === 'en' ? 'fr' : 'en';
            localStorage.setItem('pkm-lang', currentLang);
            applyLanguage();
        }

        // Render cheatsheets
        function renderCheatsheets(items = null) {
            const t = translations[currentLang];
            const cheatsheets = items || t.cheatsheets;
            const list = document.getElementById('cheatsheetsList');
            
            if (cheatsheets.length === 0) {
                list.innerHTML = `
                    <div class="empty-state">
                        <div class="empty-state-icon">üîç</div>
                        <div>${t.emptyState}</div>
                    </div>
                `;
                document.getElementById('itemCount').textContent = '0';
                return;
            }

            list.innerHTML = cheatsheets.map(item => `
                <div class="cheatsheet-item" onclick="openDetail(${item.id})">
                    <div class="cheatsheet-icon">${item.icon}</div>
                    <div class="cheatsheet-content">
                        <div class="cheatsheet-title">
                            ${item.title}
                            ${item.pinned ? `<span class="pin-badge">${t.pinned}</span>` : ''}
                        </div>
                        <div class="cheatsheet-preview">${item.preview}</div>
                        <div class="cheatsheet-tags">
                            ${item.tags.map(tag => `<span class="tag">#${tag}</span>`).join('')}
                        </div>
                    </div>
                </div>
            `).join('');

            document.getElementById('itemCount').textContent = cheatsheets.length;
        }

        // Search
        document.getElementById('searchInput').addEventListener('input', (e) => {
            const t = translations[currentLang];
            const searchTerm = e.target.value.toLowerCase();
            const filtered = t.cheatsheets.filter(item => {
                return item.title.toLowerCase().includes(searchTerm) ||
                       item.tags.some(tag => tag.includes(searchTerm)) ||
                       item.preview.toLowerCase().includes(searchTerm);
            });
            renderCheatsheets(filtered);
        });

        // Open detail
        function openDetail(id) {
            const t = translations[currentLang];
            const cheatsheet = t.cheatsheets.find(c => c.id === id);
            if (!cheatsheet) return;

            currentCheatsheet = cheatsheet;
            document.getElementById('detailTitle').innerHTML = `${cheatsheet.icon} ${cheatsheet.title}`;
            document.getElementById('detailBody').innerHTML = cheatsheet.content;
            document.getElementById('detailView').classList.add('show');
        }

        // Close detail
        function closeDetail() {
            document.getElementById('detailView').classList.remove('show');
            currentCheatsheet = null;
        }

        // Hide overlay
        function hideOverlay() {
            document.querySelector('.overlay-container').style.opacity = '0';
            setTimeout(() => {
                alert('Overlay hidden! (In real app, this would minimize to tray)');
                document.querySelector('.overlay-container').style.opacity = '1';
            }, 300);
        }

        // Copy to clipboard
        function copyToClipboard() {
            if (!currentCheatsheet) return;
            
            const text = document.getElementById('detailBody').innerText;
            navigator.clipboard.writeText(text).then(() => {
                const t = translations[currentLang];
                alert(currentLang === 'en' ? 'Copied to clipboard!' : 'Copi√© dans le presse-papier !');
            });
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                if (document.getElementById('detailView').classList.contains('show')) {
                    closeDetail();
                } else {
                    hideOverlay();
                }
            }

            if ((e.ctrlKey || e.metaKey) && e.key === 'q') {
                e.preventDefault();
                console.log('Ctrl+Q pressed - would toggle overlay');
            }
        });

        // Close detail when clicking outside
        document.getElementById('detailView').addEventListener('click', (e) => {
            if (e.target === document.getElementById('detailView')) {
                closeDetail();
            }
        });

        // Initialize
        applyTheme();
        applyLanguage();

        console.log('‚ö° Quick Reference loaded!');
        console.log(`Language: ${currentLang}, Theme: ${currentTheme}`);
    </script>
</body>
</html>
